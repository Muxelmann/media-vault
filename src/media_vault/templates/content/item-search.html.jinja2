{% extends 'content/base.html.jinja2' %}

{% block main %}
<div class="item-search">
    <h1>Search</h1>
    <form class="item-search-form" action="{{ url_for('.manage', content_path=item.content_path, search=True) }}"
        method="post">
        <input type="text" name="keyword" required>
        <input type="submit" value="search">
    </form>
    {% if item_list %}
    <h1>Results for
        <em>{{ search_keyword }}</em>
    </h1>
    {% include 'content/include/item-list.html.jinja2' %}
    <p>Search took {{ search_duration }} seconds.</p>
    {% endif %}
</div>
{% endblock main %}