{% extends 'content/base.html.jinja2' %}

{% block main %}
<div class="item-single">
    {% if item.type == 'image' %}

    <img src="{{ item.raw_url }}" id="item" alt="">

    {% elif item.type == 'video' %}

    <video id="item" autoplay loop playsinline controls>
        <source src="{{ item.raw_url }}" type="video/{{ item.suffix }}">
        Your browser does not support the video tag.
    </video>

    {% else %}

    <p>Unknown item type of {{ item.type }}. Can only show images and videos.</p>

    {% endif %}
</div>
<div class="neighbors">
    {% if item.previous_neighbor %}
    <a class="previous" href="{{ url_for('.get_content', content_path=item.previous_neighbor.content_path) }}">←</a>
    {% endif %}
    {% if item.next_neighbor %}
    <a class="next" href="{{ url_for('.get_content', content_path=item.next_neighbor.content_path) }}">→</a>
    {% endif %}
</div>
{% endblock main %}